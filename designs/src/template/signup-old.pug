//- index.jade
- var title = "STIRDATA"
- var page = "Sign Up"

doctype html
html(lang="en")

	// html head
	head
		include ./includes/head.pug

	// body
	body

		// header
		header.sign

			// wrap
			.container.d-flex.align-items-center

				// logo
				a( href="index.html" )
					img.logo( src="img/ic-logo-white.png" )
				
				// navigation
				nav.actionnav
					ul 
						li.sign
							a( href="signin.html" ) Sign in
						li
							a.button( href="signup.html" ) Get Started

		// page main
		main(role="main")

			// sign in/up
			section.signs

				// left
				.container-fluid.sign-background.blue
					.row.flex-nowrap.g-0 
						.col-md-12.col-lg-5.col-xl-5.min-vh-100.side

				// text
				section.container.signcontent
					.row
						.col-md-12.col-lg-4.col-xl-4.signcontent-left

							// banner feature
							ul.bannerfeatures.slick-features
								li
									img( src="img/img-feature-1-yellow.png")
									.text
										h2 
											| Explore, Search and 
											br
											| Navigate
										p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.
								li
									img( src="img/img-feature-2-yellow.png")
									.text
										h2 
											| Visualize, Analyze and
											br
											| Save
										p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.

						.col-md-12.col-lg-8.col-xl-8.signcontent-right

							// heading
							.headingtext
								h1 Sign up
								p
									| Sign up to start using additional tools in the STIRDATA Platform, or 
									a.anchor( href="signin.html" ) Sign in 
									|  if you already have an account.
							
							// sign in form
							.form
								.row 
									.col-xl-6
										.inputform
											span.label First Name
											input( type="text" value="Mark")
									.col-xl-6
										.inputform
											span.label Last Name
											input( type="text"  value="Wiens")
								.inputform
									span.label Email
									input( type="email" )
								.inputform
									span.label Password
									input( type="password" )
								.inputform
									span.label Repeat Password
									input( type="password" )
								.inputform
									span.label Organisation
									input( type="text" )
								.inputaction
									button( type="button" ) Sign up
									button.google( type="button" ) Sign up with Google
	// javascript
	include ./includes/script.pug