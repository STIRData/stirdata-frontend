								li
									img( src="img/img-feature-2.png")
									.text
										h2 
											| Visualize, Analyze and
											br
											| Save
										p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.

						.col-md-12.col-lg-8.col-xl-8.signcontent-right
							
							// heading
							.headingtext
								h1 Sign in
								p
									| Sign in using your email and password or 
									a.anchor( href="signup.html") Sign up  
									|  if you havenâ€™t got an account.
							
							// sign in form
							.form 
								.inputform
									span.label Email
									input( type="email" )
								.inputform
									span.label Password
									input( type="password" )
								.inputaction
									button( type="button" ) Sign in
									span.note
										span or
										a( href="#" ) Forgot Password
									button.google( type="button" ) Sign in with Google

							

	// javascript
	include ./includes/script.pug